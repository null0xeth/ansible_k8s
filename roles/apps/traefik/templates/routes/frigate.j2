---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: frigatedash
  namespace: frontend
  annotations:
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints: [web, websecure]
  routes:
    - match: Host(`frigate.chonk.city`)
      kind: Rule
      services:
        - name: frigate
          port: 5000
          weight: 10
  tls:
    secretName: chonk-city-tls

