---
apiVersion: traefik.io/v1alpha1
kind: ServersTransport
metadata:
  name: minio-transport
  namespace: minio-attic
spec:
  serverName: chonk.city
  insecureSkipVerify: true
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: minio-attic-endpoint
  namespace: minio-attic
  annotations:
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints: [web, websecure]
  routes:
    - match: Host(`s3.chonk.city`)
      kind: Rule
      services:
        - name: minio
          port: 443
          scheme: https
          serversTransport: minio-transport
          strategy: RoundRobin
          weight: 10
  tls:  #
    secretName: chonk-city-tls  #
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: minio-attic-tenant
  namespace: minio-attic
  annotations:
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints: [websecure]
  routes:
    - match: Host(`tenant.chonk.city`)
      kind: Rule
      services:
        - name: minio-attic-tenant-console
          port: 9443
          strategy: RoundRobin
          weight: 10
  tls:  #
    secretName: chonk-city-tls  #
