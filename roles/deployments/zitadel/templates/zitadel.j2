  masterkey: x123456789012345678901234567891y
  configmapConfig:
    ExternalSecure: true
    ExternalPort: 443
    ExternalDomain: chonk.city
    TLS:
      Enabled: false
    FirstInstance:
      Org:
        Human:
          # use the loginname null0x@zitadel.chonk.city
          Username: 'null0x'
